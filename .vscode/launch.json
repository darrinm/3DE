    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceRoot}/api-server/gcf-emu.js",
            "cwd": "${workspaceRoot}/api-server",
            "env": {
                "GCLOUD_PROJECT": "de-io-3a257"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Client",
            "port": 9222,
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}/src",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/userDataDir"
        },
        {
            "type": "composite",
            "name": "Launch Both",
            "configurationNames": [
                "Launch Server",
                "Launch Client"
            ]
        }
    ]
}